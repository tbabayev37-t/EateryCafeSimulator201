@model RegisterVM
<br />
<br />
<br />
<div class="container"
    <div class="row">
        <h2>Sign In</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Fullname"></label>
                <input asp-for="Fullname" class="form-control" placeholder="Enter fullname">
               <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter the email">
               <span asp-validation-for="Email" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter the username">
               <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter the password">
               <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter the username">
               <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
              
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>